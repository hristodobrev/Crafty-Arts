<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-bar-chart-o fa-fw"></i>Add your comment</h3>
                <form class="form-horizontal" method="post" action="/projects/comments/{{project.id}}">
                    <fieldset>
                        <div class="form-group">
                            <label class="col-sm-4 control-label" for="inputContent">Comment</label>
                            <div class="col-sm-4 ">
                                <textarea type="text" class="form-control" id="inputContent" placeholder="Comment" name="content" required value={{content}}></textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-4 col-sm-offset-4">
                                <button type="reset" class="btn btn-default"><a href="/projects/details/{{project.id}}">Cancel</a></button>
                                <button type="submit" class="btn btn-primary">Add a comment</button>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-bar-chart-o fa-fw"></i>All comments</h3><br/>
                {{#each project.comments}}
                    <h4>{{content}}</h4>
                    <h5><b>Posted by:</b> {{email.email}}</h5>
                    <h5><b>Posted on:</b> {{dateFormat commentDate "D MMMM YYYY"}}</h5>
                    <br/><br/>
                {{/each}}
            </div>
        </div>
    </div>
</div>