<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-bar-chart-o fa-fw"></i>Create project</h3>
                <form class="form-horizontal" method="post" action="/projects/create">
                    <fieldset>
                        <div class="form-group">
                            <label class="col-sm-4 control-label" for="inputTitle">Title</label>
                            <div class="col-sm-4 ">
                                <input type="text" class="form-control" id="inputTitle" placeholder="Title" name="title" required value={{title}} >
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-4 control-label" for="inputJobNumber">Job number</label>
                            <div class="col-sm-4 ">
                                <input type="number" class="form-control" id="inputJobNumber" placeholder="Job number" required name="jobNumber" value={{jobNumber}}>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-4 control-label" for="inputWorker">Worker</label>
                            <div class="col-sm-4 ">
                                <select name="selectWorker">
                                    {{#each users}}
                                        <option name="{{email}}" value="{{email}}">{{email}}</option>
                                    {{/each}}
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-4 col-sm-offset-4">
                                <button type="reset" class="btn btn-default"><a href="/">Cancel</a></button>
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>