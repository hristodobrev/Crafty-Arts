<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-bar-chart-o fa-fw"></i>Update project</h3>
                <form class="form-horizontal" method="post" action="/projects/edit/{{project.id}}">
                    <fieldset>
                        <div class="form-group">
                            <label class="col-sm-4 control-label" for="inputJobNumber">Job number:</label>
                            <div class="col-sm-4 ">
                                {{project.jobNumber}}
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-4 control-label" for="inputTitle">Title</label>
                            <div class="col-sm-4 ">
                                <input type="text" class="form-control" id="inputTitle" placeholder="Title" name="title" required value="{{project.title}}">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-4 control-label" for="inputWorker">Worker</label>
                            <div class="col-sm-4 ">
                                <select name="selectWorker">
                                    <option name="{{foundWorker.email}}" value="{{foundWorker.email}}">{{foundWorker.email}}</option>
                                    {{#each users}}
                                        <option name="{{this.email}}" value="{{this.email}}">{{this.email}}</option>
                                    {{/each}}
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-4 control-label" for="inputStatus">Status</label>
                            <div class="col-sm-4 ">
                                <select name="selectStatus">
                                    <option name="{{project.status}}" value="{{project.status}}">{{project.status}}</option>
                                    <option name="open" value="open">open</option>
                                    <option name="testing" value="testing">testing</option>
                                    <option name="resolved" value="resolved">resolved</option>
                                    <option name="closed" value="closed">closed</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-4 control-label" for="inputCreator">Creatd by:</label>
                            <div class="col-sm-4 ">
                                {{project.creator.firstName}} {{project.creator.lastName}}
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-4 control-label" for="inputDate">Creatd on:</label>
                            <div class="col-sm-4 ">{{dateFormat project.date "D MMMM YYYY"}}</div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-4 control-label" for="inputUpdatedDate">Last updated on:</label>
                            <div class="col-sm-4 ">{{dateFormat project.updatedDate "D MMMM YYYY"}}</div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-4 col-sm-offset-4">
                                <button type="reset" class="btn btn-default"><a href="/projects/details/{{project.id}}">Cancel</a></button>
                                <button type="submit" href="/projects/edit/{{project.id}}" class="btn btn-primary">Update</button>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>